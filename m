> 
> # grub.conf generated by anaconda
> splashimage=(hd0,0)/boot/grub/splash.xpm.gz
> title Fedora Core (2.6.5-1.358)
> 	root (hd0,0)
> 	kernel /boot/vmlinuz-2.6.5-1.358 ro root=LABEL=/ rhgb quiet
